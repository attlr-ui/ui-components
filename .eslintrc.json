{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["standard-with-typescript", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "ignorePatterns": ["node_modules", "*-lock.json", "dist"],
  "rules": {
    "react/prop-types": 1,
    "react/react-in-jsx-scope": 1,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "no-unused-vars": 2,
    "@typescript-eslint/strict-boolean-expressions": 0
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
